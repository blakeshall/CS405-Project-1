<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @service.name %>
</p>

<p>
  <b>Description:</b>
  <%= @service.description %>
</p>

<p>
  <b>Amount:</b>
  <%= @service.amount %>
</p>

<p>
  <b>Reoccuring:</b>
  <%= @service.reoccuring %>
</p>

<p>
  <b>Active:</b>
  <%= @service.active %>
</p>

<h2>Make a new payment</h2>
<%= form_for([@service, @service.payments.build]) do |f| %>
  <div class="field">
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Edit', edit_service_path(@service) %> |
<%= link_to 'Back', services_path %>
